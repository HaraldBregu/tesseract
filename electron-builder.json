{
  "productName": "Criterion",
  "appId": "com.finconsgroup.criterion",
  "copyright": "FinconGroup Â© 2025",
  "files": ["out", "i18n", "buildResources"],
  "icon": "./buildResources/appIcons/icon.ico",
  "extraResources": [
    "out/preload/preload.mjs",
    {
      "from": "./i18n",
      "to": "i18n"
    },
    {
      "from": "./LICENSE",
      "to": "LICENSE"
    },
    {
      "from": "./buildResources",
      "to": "buildResources"
    }
  ],
  "asar": true,
  "asarUnpack": [],
  "mac": {
    "target": [
      {
        "target": "dmg",
        "arch": ["x64", "arm64"]
      },
      {
        "target": "zip",
        "arch": ["x64", "arm64"]
      }
    ],
    "icon": "./buildResources/appIcons/icon.icns",
    "extendInfo": {
      "LSApplicationCategoryType": "public.app-category.utilities"
    },
    "artifactName": "${productName}-${version}-${arch}.${ext}",
    "darkModeSupport": true,
    "hardenedRuntime": true,
    "gatekeeperAssess": false,
    "entitlements": "./buildResources/entitlements.mac.plist",
    "entitlementsInherit": "./buildResources/entitlements.mac.plist",
    "identity": "FinconGroup",
    "fileAssociations": [
      {
        "ext": "critx",
        "name": "Criterion Document",
        "icon": "./buildResources/fileIcons/mac/fileIcon.icns",
        "role": "Editor"
      }
    ]
  },
  "dmg": {
    "icon": "./buildResources/appIcons/icon.icns",
    "iconSize": 100,
    "window": {
      "width": 660,
      "height": 400
    },
    "contents": [
      {
        "x": 180,
        "y": 170,
        "type": "file"
      },
      {
        "x": 480,
        "y": 170,
        "type": "link",
        "path": "/Applications"
      }
    ],
    "title": "Install Criterion ${version}",
    "internetEnabled": false,
    "format": "UDZO",
    "sign": true,
    "artifactName": "${productName}-setup-${version}-${arch}.${ext}",
    "writeUpdateInfo": false
  },
  "linux": {
    "target": [
      { "target": "AppImage" },
      { "target": "deb" },
      { "target": "rpm" }
    ],
    "category": "Utility",
    "icon": "./buildResources/appIcons/linux_icons",
    "maintainer": "Fincons Group S.p.A.",
    "synopsis": "Text editor for Critical editions",
    "description": "Criterion is a professional text editor designed specifically for creating and editing critical editions of texts. It provides advanced features for scholarly text editing and academic publishing.",
    "vendor": "Fincons Group",
    "executableName": "criterion",
    "desktop": {
      "Type": "Application",
      "Name": "Criterion",
      "Comment": "Text editor for Critical editions",
      "Icon": "criterion",
      "Terminal": false,
      "Categories": "Office;WordProcessor;TextEditor;",
      "MimeType": "application/x-criterion-document;",
      "StartupNotify": true,
      "StartupWMClass": "Criterion"
    },
    "fileAssociations": [
      {
        "ext": "critx",
        "name": "Criterion Document",
        "description": "Criterion Document File",
        "mimeType": "application/x-criterion-document",
        "icon": "./buildResources/fileIcons/linux/48x48.png"
      }
    ]
  },
  "appImage": {
    "license": "./LICENSE"
  },
  "deb": {
    "depends": [
      "libgtk-3-0",
      "libnss3",
      "libxss1",
      "libasound2",
      "libatk-bridge2.0-0",
      "libgdk-pixbuf2.0-0",
      "libx11-xcb1",
      "libxcomposite1",
      "libxdamage1",
      "libxrandr2",
      "libxcursor1",
      "libxext6",
      "libxcb1",
      "libnspr4",
      "libdrm2",
      "libcups2",
      "libexpat1"
    ]
  },
  "win": {
    "icon": "./buildResources/appIcons/icon.ico",
    "target": "nsis",
    "signAndEditExecutable": true,
    "artifactName": "${productName}.${ext}",
    "forceCodeSigning": false,
    "signtoolOptions": {
      "publisherName": "FinconGroup"
    },
    "requestedExecutionLevel": "asInvoker",
    "fileAssociations": [
      {
        "ext": "critx",
        "name": "Criterion Document",
        "icon": "./buildResources/fileIcons/win/fileIcon.ico"
      }
    ]
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true,
    "createDesktopShortcut": true,
    "shortcutName": "Criterion",
    "multiLanguageInstaller": true,
    "warningsAsErrors": false,
    "include": "./scripts/installer.nsh",
    "deleteAppDataOnUninstall": false,
    "installerIcon": "./buildResources/appIcons/icon.ico",
    "uninstallerIcon": "./buildResources/appIcons/icon.ico",
    "perMachine": false,
    "license": "./LICENSE",
    "artifactName": "${productName}-${version}.${ext}",
    "displayLanguageSelector": true,
    "runAfterFinish": false,
    "language": "1040",
    "installerLanguages": ["it-IT", "en-US", "es-ES", "fr-FR", "de-DE"]
  }
}
