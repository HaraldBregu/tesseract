{
  "appId": "com.finconsgroup.criterion",
  "copyright": "FinconGroup Â© 2025",
  "files": ["out", "i18n"],
  "extraResources": [
    {
      "from": "./i18n",
      "to": "i18n"
    },
    "out/preload/preload.mjs"
  ],
  "icon": "./appIcon.png",
  "mac": {
    "target": [
      {
        "target": "dmg",
        "arch": ["x64", "arm64"]
      },
      {
        "target": "zip",
        "arch": ["x64", "arm64"]
      }
    ],
    "icon": "./appIcon_512.png",
    "extendInfo": {
      "LSApplicationCategoryType": "public.app-category.utilities"
    }
  },
  "dmg": {
    "icon": "./appIcon.png",
    "iconSize": 100,
    "window": {
      "width": 600,
      "height": 400
    },
    "contents": [
      {
        "x": 180,
        "y": 170,
        "type": "file"
      },
      {
        "x": 420,
        "y": 170,
        "type": "link",
        "path": "/Applications"
      }
    ]
  },
  "linux": {
    "target": ["AppImage", "deb", "rpm"],
    "category": "Utility",
    "icon": "./appIcon.png",
    "desktop": {
      "Type": "Application",
      "Name": "Criterion",
      "Icon": "appIcon",
      "Terminal": false,
      "Categories": "Utility;"
    }
  },
  "win": {
    "target": ["nsis"],
    "icon": "./appIcon.png",
    "signAndEditExecutable": false,
    "artifactName": "${productName}-${version}.${ext}",
    "asar": true,
    "forceCodeSigning": false,
    "signtoolOptions": {
      "publisherName": "FinconGroup"
    }
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true,
    "createDesktopShortcut": true,
    "multiLanguageInstaller": true,
    "warningsAsErrors": false,
    "include": "./installer.nsh",
    "deleteAppDataOnUninstall": true
  }
}
