{
  "productName": "Tesseract",
  "appId": "com.tesseract.tesseract",
  "copyright": "Tesseract Project Â© 2025",
  "afterAllArtifactBuild": "./scripts/electron-builder-hooks.cjs",
  "files": [
    "out/**",
    "i18n/**",
    "resources/**"
  ],
  "icon": "./resources/appIcons/icon.ico",
  "extraResources": [
    "out/preload/preload.mjs",
    { "from": "./i18n", "to": "i18n" },
    { "from": "./LICENSE", "to": "LICENSE" },
    {
      "from": "./resources",
      "to": "resources",
      "filter": [
        "icons/**",
        "styles/**",
        "templates/**",
        "fileIcons/**",
        "appIcons/**",
        "entitlements.mac.plist",
        "printPreview/pdfjs/**",
        "printPreview/fonts/**",
        "printPreview/preview/**",
        "printPreview/printpreview-0.0.1-SNAPSHOT.jar",
        "!printPreview/TinyTeX-lin/**",
        "!printPreview/TinyTeX-win/**",
        "!printPreview/TinyTeX-mac/**"
      ]
    }
  ],
  "asar": true,
  "asarUnpack": [],
  "nodeGypRebuild": false,
  "buildDependenciesFromSource": false,
  "npmRebuild": false,
  "mac": {
    "target": [
      {
        "target": "pkg",
        "arch": ["x64", "arm64"]
      }
    ],
    "icon": "./resources/appIcons/icon.icns",
    "extendInfo": {
      "LSApplicationCategoryType": "public.app-category.utilities",
      "CFBundleDocumentTypes": [
        {
          "CFBundleTypeName": "Tesseract File",
          "CFBundleTypeIconFile": "fileIcon.icns",
          "CFBundleTypeExtensions": ["tsx"],
          "CFBundleTypeRole": "Editor",
          "LSHandlerRank": "Owner",
          "LSItemContentTypes": ["com.tesseract.tesseract.document"]
        }
      ],
      "UTExportedTypeDeclarations": [
        {
          "UTTypeIdentifier": "com.tesseract.tesseract.document",
          "UTTypeDescription": "Tesseract File",
          "UTTypeConformsTo": ["public.data"],
          "UTTypeTagSpecification": {
            "public.filename-extension": ["tsx"],
            "public.mime-type": ["application/x-tesseract-document"]
          }
        }
      ]
    },
    "artifactName": "${productName}-${version}-${arch}.${ext}",
    "darkModeSupport": true,
    "hardenedRuntime": true,
    "gatekeeperAssess": false,
    "entitlements": "./resources/entitlements.mac.plist",
    "entitlementsInherit": "./resources/entitlements.mac.plist",
    "identity": null,
    "type": "development",
    "fileAssociations": [
      {
        "ext": "tsx",
        "name": "Tesseract File",
        "description": "Tesseract File",
        "mimeType": "application/x-tesseract-document",
        "icon": "./resources/fileIcons/mac/fileIcon.icns",
        "role": "Editor",
        "rank": "Owner"
      }
    ],
    "extraResources": [
      {
        "from": "./resources",
        "to": "resources",
        "filter": ["printPreview/jre/macos/**", "printPreview/TinyTeX-mac/**"]
      }
    ]
  },
  "pkg": {
    "license": "./LICENSE",
    "allowAnywhere": true,
    "allowCurrentUserHome": true,
    "allowRootDirectory": true,
    "isRelocatable": false,
    "isVersionChecked": true,
    "hasStrictIdentifier": true,
    "overwriteAction": "upgrade",
    "artifactName": "${productName}-installer-${version}-${arch}.${ext}"
  },
  "linux": {
    "target": [{ "target": "deb" }],
    "category": "Utility",
    "artifactName": "${productName}-${version}.${ext}",
    "icon": "./resources/appIcons/linux_icons",
    "maintainer": "Tesseract Project",
    "synopsis": "Tesseract",
    "description": "Tesseract - Advanced Text Editor",
    "vendor": "Tesseract Project",
    "executableName": "tesseract",
    "desktop": {
      "Type": "Application",
      "Name": "Tesseract",
      "Comment": "Advanced Text Editor",
      "Icon": "tesseract",
      "Terminal": false,
      "Categories": "Office;WordProcessor;TextEditor;",
      "MimeType": "application/x-tesseract-document;",
      "StartupNotify": true,
      "StartupWMClass": "Tesseract"
    },
    "fileAssociations": [
      {
        "ext": "tsx",
        "name": "Tesseract File",
        "description": "Tesseract File",
        "mimeType": "application/x-tesseract-document",
        "icon": "./resources/fileIcons/linux/48x48.png"
      }
    ],
    "extraResources": [
      {
        "from": "./resources",
        "to": "resources",
        "filter": ["printPreview/jre/linux/**", "printPreview/TinyTeX-lin/**"]
      }
    ]
  },
  "deb": {
    "packageCategory": "utils",
    "maintainer": "Tesseract Project <contact@tesseract-editor.org>",
    "afterInstall": "./scripts/postinstall.sh",
    "depends": [
      "libgtk-3-0",
      "libnss3",
      "libxss1",
      "libasound2",
      "libatk-bridge2.0-0",
      "libgdk-pixbuf2.0-0",
      "libx11-xcb1",
      "libxcomposite1",
      "libxdamage1",
      "libxrandr2",
      "libxcursor1",
      "libxext6",
      "libxcb1",
      "libnspr4",
      "libdrm2",
      "libcups2",
      "libexpat1"
    ]
  },
  "win": {
    "icon": "./resources/appIcons/icon.ico",
    "target": "nsis",
    "signAndEditExecutable": true,
    "artifactName": "${productName}.${ext}",
    "forceCodeSigning": false,
    "signtoolOptions": {
      "publisherName": "Tesseract Project"
    },
    "requestedExecutionLevel": "asInvoker",
    "fileAssociations": [
      {
        "ext": "tsx",
        "name": "Tesseract File",
        "icon": "./resources/fileIcons/win/fileIcon.ico"
      }
    ],
    "extraResources": [
      {
        "from": "./resources",
        "to": "resources",
        "filter": ["printPreview/jre/win/**", "printPreview/TinyTeX-win/**"]
      }
    ]
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true,
    "createDesktopShortcut": true,
    "shortcutName": "Tesseract",
    "multiLanguageInstaller": true,
    "warningsAsErrors": false,
    "include": "./scripts/installer.nsh",
    "deleteAppDataOnUninstall": false,
    "installerIcon": "./resources/appIcons/icon.ico",
    "uninstallerIcon": "./resources/appIcons/icon.ico",
    "perMachine": false,
    "license": "./LICENSE",
    "artifactName": "${productName}-${version}.${ext}",
    "displayLanguageSelector": true,
    "runAfterFinish": false,
    "language": "1040",
    "installerLanguages": ["it-IT", "en-US", "es-ES", "fr-FR", "de-DE"]
  }
}
