{
  "productName": "Criterion",
  "appId": "com.finconsgroup.criterion",
  "copyright": "FinconGroup Â© 2025",
  "files": ["out", "i18n", "buildResources"],
  "icon": "./buildResources/appIcons/icon.ico",
  "extraResources": [
    "out/preload/preload.mjs",
    {
      "from": "./i18n",
      "to": "i18n"
    },
    {
      "from": "./LICENSE",
      "to": "LICENSE"
    },
    {
      "from": "./buildResources",
      "to": "buildResources"
    }
  ],
  "asar": true,
  "asarUnpack": [],
  "mac": {
    "target": [
      {
        "target": "dmg",
        "arch": ["x64", "arm64"]
      },
      {
        "target": "zip",
        "arch": ["x64", "arm64"]
      }
    ],
    "icon": "./buildResources/appIcons/icon.icns",
    "extendInfo": {
      "LSApplicationCategoryType": "public.app-category.utilities"
    },
    "artifactName": "${productName}-${version}-${arch}.${ext}",
    "darkModeSupport": true,
    "hardenedRuntime": true,
    "gatekeeperAssess": false,
    "entitlements": "./buildResources/entitlements.mac.plist",
    "entitlementsInherit": "./buildResources/entitlements.mac.plist",
    "identity": "FinconGroup",
    "fileAssociations": [
      {
        "ext": "critx",
        "name": "Criterion Document",
        "icon": "./buildResources/fileIcons/mac/fileIcon.icns",
        "role": "Editor"
      }
    ]
  },
  "dmg": {
    "icon": "./buildResources/appIcons/icon.icns",
    "iconSize": 100,
    "window": {
      "width": 600,
      "height": 400
    },
    "contents": [
      {
        "x": 180,
        "y": 170,
        "type": "file"
      },
      {
        "x": 420,
        "y": 170,
        "type": "link",
        "path": "/Applications"
      }
    ],
    "title": "Criterion_${version}_${arch}",
    "internetEnabled": false,
    "format": "UDZO",
    "sign": true,
    "artifactName": "${productName}-setup-${version}-${arch}.${ext}",
    "writeUpdateInfo": false
  },
  "linux": {
    "target": ["AppImage", "deb", "rpm"],
    "category": "Utility",
    "icon": "./buildResources/appIcons",
    "desktop": {
      "Type": "Application",
      "Name": "Criterion",
      "Icon": "appIcon",
      "Terminal": false,
      "Categories": "Utility;"
    }
  },
  "win": {
    "icon": "./buildResources/appIcons/icon.ico",
    "target": "nsis",
    "signAndEditExecutable": true,
    "artifactName": "${productName}.${ext}",
    "forceCodeSigning": false,
    "signtoolOptions": {
      "publisherName": "FinconGroup"
    },
    "requestedExecutionLevel": "asInvoker",
    "fileAssociations": [
      {
        "ext": "critx",
        "name": "Criterion Document",
        "icon": "./buildResources/fileIcons/win/fileIcon.ico"
      }
    ]
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true,
    "createDesktopShortcut": true,
    "shortcutName": "Criterion",
    "multiLanguageInstaller": true,
    "warningsAsErrors": false,
    "include": "./scripts/installer.nsh",
    "deleteAppDataOnUninstall": false,
    "installerIcon": "./buildResources/appIcons/icon.ico",
    "uninstallerIcon": "./buildResources/appIcons/icon.ico",
    "perMachine": false,
    "license": "./LICENSE",
    "artifactName": "${productName}-${version}.${ext}",
    "displayLanguageSelector": true,
    "runAfterFinish": false,
    "language": "1040",
    "installerLanguages": ["it-IT", "en-US", "es-ES", "fr-FR", "de-DE"]
  }
}
